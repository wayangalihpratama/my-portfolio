---
// src/components/Hero.astro
const resumeLink = import.meta.env.BASE_URL + "Galih-Pratama-CV.pdf";
---

<section class="relative isolate overflow-hidden dark:bg-gray-900">
  <!-- Background gradient - Blue and Green -->
  <div
    class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
    aria-hidden="true"
  >
    <div
      class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-blue-600 to-green-600 opacity-20 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem] dark:opacity-30"
      style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
    >
    </div>
  </div>

  <div class="py-24 sm:py-32 lg:py-40">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-12 lg:gap-x-12 lg:items-center">
        <!-- Text Content -->
        <div class="lg:col-span-7">
          <div
            class="inline-flex items-center rounded-full px-3 py-1 text-sm font-semibold text-green-700 ring-1 ring-inset ring-green-600/20 dark:text-green-400 dark:ring-green-400/30 mb-8"
          >
            ğŸ‘‹ Available for opportunities
          </div>

          <h1
            class="text-5xl font-bold tracking-tight text-gray-900 sm:text-6xl lg:text-7xl dark:text-white"
          >
            Hi, I'm <span
              class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-green-600 dark:from-blue-400 dark:to-green-400"
              >Wayan Galih Pratama</span
            >
          </h1>

          <p
            class="mt-6 text-xl leading-8 text-gray-700 dark:text-gray-300 font-medium"
          >
            Fullstack Developer @ Akvo ğŸŒ
          </p>

          <p class="mt-4 text-lg leading-8 text-gray-600 dark:text-gray-400">
            Building intelligent web applications at the intersection of
            traditional technologies and modern AI. Currently exploring RAG
            development and bridging the gap between vast knowledge bases and
            intelligent responses.
          </p>

          <!-- Quick Facts -->
          <div
            class="mt-8 flex flex-wrap gap-4 text-sm text-gray-600 dark:text-gray-400"
          >
            <div class="flex items-center gap-2">
              <span class="text-2xl">ğŸ”­</span>
              <span>RAG Integration</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-2xl">ğŸµ</span>
              <span>Balinese Music</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-2xl">âœˆï¸</span>
              <span>Travel Enthusiast</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-2xl">ğŸï¸</span>
              <span>Based in Indonesia</span>
            </div>
          </div>

          <!-- CTA Buttons -->
          <div class="mt-10 flex flex-wrap items-center gap-4">
            <a
              href="#projects"
              class="rounded-lg bg-blue-600 px-6 py-3 text-sm font-semibold text-white shadow-lg hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition-all hover:scale-105"
            >
              View Projects
            </a>
            <a
              href={resumeLink}
              class="rounded-lg px-6 py-3 text-sm font-semibold text-gray-900 dark:text-white ring-1 ring-inset ring-gray-300 dark:ring-gray-700 hover:ring-blue-600 dark:hover:ring-blue-400 transition-all hover:scale-105"
            >
              Download CV <span aria-hidden="true">â†’</span>
            </a>
            <a
              href="#contact"
              class="text-sm font-semibold text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
            >
              Get in touch <span aria-hidden="true">â†’</span>
            </a>
          </div>
        </div>

        <!-- Profile Image/Visual -->
        <div class="lg:col-span-5 mt-16 lg:mt-0">
          <div class="relative">
            <!-- Animated background circles - Blue and Green -->
            <div class="absolute inset-0 -z-10">
              <div
                class="absolute top-1/4 left-1/4 h-72 w-72 rounded-full bg-blue-400/20 blur-3xl animate-pulse"
              >
              </div>
              <div
                class="absolute bottom-1/4 right-1/4 h-72 w-72 rounded-full bg-green-400/20 blur-3xl animate-pulse"
                style="animation-delay: 1s;"
              >
              </div>
            </div>

            <!-- Profile card -->
            <div class="relative mx-auto max-w-md">
              <div
                class="rounded-2xl bg-white dark:bg-gray-800 p-8 shadow-2xl ring-1 ring-gray-200 dark:ring-gray-700"
              >
                <!-- Avatar placeholder - Blue to Green gradient -->
                <div
                  class="mx-auto h-48 w-48 rounded-full bg-gradient-to-br from-blue-500 to-green-600 flex items-center justify-center text-white text-6xl font-bold shadow-lg"
                >
                  GP
                </div>

                <!-- Tech stack badges - Using Blue, Green, Brown, and Red -->
                <div class="mt-8 flex flex-wrap gap-2 justify-center">
                  <span
                    class="inline-flex items-center rounded-full bg-blue-50 dark:bg-blue-900/30 px-3 py-1 text-xs font-medium text-blue-700 dark:text-blue-300"
                  >
                    React
                  </span>
                  <span
                    class="inline-flex items-center rounded-full bg-green-50 dark:bg-green-900/30 px-3 py-1 text-xs font-medium text-green-700 dark:text-green-300"
                  >
                    Node.js
                  </span>
                  <span
                    class="inline-flex items-center rounded-full bg-blue-50 dark:bg-blue-900/30 px-3 py-1 text-xs font-medium text-blue-700 dark:text-blue-300"
                  >
                    Astro
                  </span>
                  <span
                    class="inline-flex items-center rounded-full bg-red-50 dark:bg-red-900/30 px-3 py-1 text-xs font-medium text-red-700 dark:text-red-300"
                  >
                    RAG/AI
                  </span>
                  <span
                    class="inline-flex items-center rounded-full bg-amber-50 dark:bg-amber-900/30 px-3 py-1 text-xs font-medium text-amber-800 dark:text-amber-300"
                  >
                    LLMs
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom gradient - Green and Blue -->
  <div
    class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]"
    aria-hidden="true"
  >
    <div
      class="relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-green-600 to-blue-600 opacity-20 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem] dark:opacity-30"
      style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
    >
    </div>
  </div>
</section>
